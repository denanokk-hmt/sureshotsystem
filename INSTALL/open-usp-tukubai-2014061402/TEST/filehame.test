#!/usr/local/bin/bash -xv
#
# test script of filehame
#
# usage: ./filehame.test <python ver>

name=filehame
    
tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir
    
com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

cat << FIN > $tmp-file1
あいうえお
INSERT
さしすせそ
FIN

cat << FIN > $tmp-file2
かきくけこ
FIN

cat << FIN > $tmp-out
あいうえお
かきくけこ
さしすせそ
FIN

${com} -lINSERT $tmp-file1 $tmp-file2 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1 error"

###########################################
#TEST2

cat << FIN > $tmp-file1
あいうえお
<!-- INSERT_FIRST -->
さしすせそ
###INSERT_NEXT###
FIN

cat << FIN > $tmp-file2
かきくけこ
FIN

cat << FIN > $tmp-file3
たちつてと
なにぬねの
FIN

cat << FIN > $tmp-out
あいうえお
かきくけこ
さしすせそ
たちつてと
なにぬねの
FIN

${com} -lINSERT_FIRST $tmp-file1 $tmp-file2	|
${com} -lINSERT_NEXT - $tmp-file3 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2.1 error"

cat $tmp-file2					|
${com} -lINSERT_FIRST $tmp-file1 -		|
${com} -lINSERT_NEXT - $tmp-file3 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
