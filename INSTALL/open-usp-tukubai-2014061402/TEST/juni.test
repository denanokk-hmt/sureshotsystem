#!/usr/local/bin/bash -xv
#!/bin/bash -xv
#
# test script of juni 
#
# usage: ./juni.test <dir> <interpreter>

name=juni

tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir

com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

cat << FIN > $tmp-in
山田
江頭
田中
FIN

cat << FIN > $tmp-out
1 山田
2 江頭
3 田中
FIN

${com} $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.1 error"

cat $tmp-in   |
${com} > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.2 error"

###########################################
#TEST2

cat << FIN > $tmp-in
001 a
001 b
001 c
002 d
002 e
FIN

cat << FIN > $tmp-out
1 001 a
2 001 b
3 001 c
1 002 d
2 002 e
FIN

${com} 1 1 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2.1 error"

cat $tmp-in		|
${com} 1 1 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2.2 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
