#!/bin/bash -vx
#

########################################
#	SESSION_CHECK.CGI
#
#   Arguments 
#       $1:session_id
#       $2:session lifetime (default 15min)
#
#	Written by hiramatsu


########################################
#基本設定
SYSD=$(cd $(dirname $0) && pwd | awk '{print substr($0, 0, index($0, "sureshotsystem")+13)}')
#exec 2> ${SYSD}/LOG/LOG.$(basename $0).$(date +%Y%m%d).$(date +%H%M%S).$$
tmp=/tmp/tmp_$$
LANG=ja_JP.UTF-8
PATH=/home/:/home/UTL:/usr/local/bin:/home/TOOL/open-usp-tukubai-2014061402/COMMANDS:$PATH
SESSION_FILED=${SYSD}/SESSION
LIFETIME_MIN=15
#COOKIE_LIFETIME_MIN=15

#######################################
#Set SESSION LIFE TIME
S=$2
SESS_LIFE=${2:-"$LIFETIME_MIN"}

#######################################
#Get session
SESS=$(session_get $1)

#######################################
#Check the session
if [ -n "${SESS}" ] ; then
    if [ $(find "${SESSION_FILED}" -mmin -"${SESS_LIFE}" -name "${SESS}" -type f) ]; then 
        SESS_STATUS='live'
    else
        SESS_STATUS='expire'
    fi
else
    SESS_STATUS='none'
fi
echo ${SESS_STATUS} > $tmp-sess-status

#######################################
#Return session status
echo ${SESS_STATUS}
rm -f $tmp-*
exit 0

