#!/bin/bash -evx
#

########################################
#	STUFF EDIT COMPLETE.CGI
#
#   引数
#       $1:プロセスID
#
#	Written by hiramatsu


########################################
#基本設定
SYSD=/home/sureshotsystem
#exec 2> ${SYSD}/LOG/LOG.$(basename $0).$(date +%Y%m%d).$(date +%H%M%S).$$
tmp=/tmp/tmp_$1
LANG=ja_JP.UTF-8
PATH=/home/:/home/UTL:/home/TOOL/open-usp-tukubai-2014061402/COMMANDS:$PATH
CATEGORY=`cat $tmp-category`
FUNC=`cat $tmp-func`
LOGIND=${SYSD}/DATA/${CATEGORY}/LOGIN
USERSD=${SYSD}/DATA/${CATEGORY}/USERS
STUFF_SESS_ID='sureshot_stuff_session_id'

########################################
#Check error
ERROR_CHECK(){
	[ $(plus ${PIPESTATUS[@]}) -eq 0 ] && return
cat <<- FIN
	Context-type: text/html
	NG input
FIN
	cat $tmp-result
	exit 1
}

#######################################
#Get Form Data
ID=$(nameread STUFF_ID $tmp-post)
VALUE1=$(nameread FAMILY_NAME $tmp-post)
VALUE2=$(nameread GIVEN_NAME $tmp-post)
VALUE3=$(nameread EMAIL $tmp-post)
PW=$(nameread PASSWORD $tmp-post)
#VALUE5=$(nameread ADMIN_FLAG $tmp-post)
VALUE5=0




#########################################
##STUFFのデータをロックする
#LOCK=`${SYSD}/CGI/LOCK/LOCK 'STUFF' `
#
#########################################
##STUFFのデータロックを解除
#UNLOCK=`${SYSD}/CGI/LOCK/UNLOCK 'STUFF' `



######################################
#Set employee number
STUFF_NUM=$(cat ${SYSD}/DATA/STUFF/TMP/${ID})
rm -f ${SYSD}/DATA/STUFF/TMP/${ID}

########################################
#PW
if [ "${PW}" = 'NOT_CHANGE' ]; then
    PW=$(cat ${LOGIND}/LV3/LOGINPASSES   | awk -v id=$STUFF_NUM '$1==id{print $3}')
fi

########################################
#Set DATE
ls ${SYSD}/DATA/STUFF/USERS/LV1/${STUFF_NUM}_employee_* | cut -d'_' -f3 | sort -nk1,1 | head -n 1 > $tmp-create
CREATE_DATE=$(cat $tmp-create)
UPDATE_DATE=$(date +%Y%m%d%H%M%S)

########################################
#Write data to tempolary file
#1.社員番号 3.EMAIL 2.PW 3.作成日時 4.更新日時 5.ADMINフラグ 6.削除フラグ
echo ${STUFF_NUM}" "${VALUE3}" "${PW}" "${CREATE_DATE}" "${UPDATE_DATE}" "${VALUE5}" "0 > $tmp-login

########################################
#Write data to tempolary file
#1.社員番号 2.姓 3.名 4.EMAIL 5.TEL 6.作成日時 7.更新日時 8.ADMINフラグ 9.削除フラグ
echo ${STUFF_NUM}" "${VALUE1}" "${VALUE2}" "${VALUE3}" - "${CREATE_DATE}" "${UPDATE_DATE}" "${VALUE5}" "0 > $tmp-employee

########################################
#Data Saving for LOGIN
#LV1
$(mv $tmp-login ${LOGIND}/LV1/${STUFF_NUM}_loginpass_${UPDATE_DATE})
#LV2
cat ${LOGIND}/LV1/${STUFF_NUM}_loginpass_${UPDATE_DATE}  >> ${LOGIND}/LV2/LOGINPASSES
chmod 775 ${LOGIND}/LV2/LOGINPASSES
#LV3
cat ${LOGIND}/LV2/LOGINPASSES   |
LANG=C sort -nk1,1 -nrk5,5      |
uniq -w 1 | sort -nk1,1         > ${LOGIND}/LV3/LOGINPASSES
chmod 775 ${LOGIND}/LV3/LOGINPASSES

########################################
#Data Saving for STUFF
#LV1
$(mv $tmp-employee ${USERSD}/LV1/${STUFF_NUM}_employee_${UPDATE_DATE})
#LV2
cat ${USERSD}/LV1/${STUFF_NUM}_employee_${UPDATE_DATE}   >> ${USERSD}/LV2/STUFF
chmod 775 ${USERSD}/LV2/STUFF
#LV3
cat ${USERSD}/LV1/${STUFF_NUM}_employee_${CREATE_DATE}   |
awk '{print sprintf("%d %s %s %s %s %s %s %d %d /APP/STUFF/USERS/SHOW/?id=%d /APP/STUFF/EDIT/INPUT/?id=%d /APP/STUFF/DELETE/CONFIRM/?id=%d",$1,$2,$3,$4,$5,$6,$7,$8,$9,$1,$1,$1)}'    >> ${USERSD}/LV3/STUFF
#LV3
cat ${USERSD}/LV2/STUFF     |
LANG=C sort -nk1,1 -nrk7,7      |
uniq -w 1 | sort -nk1,1         |
awk '{print sprintf("%d %s %s %s %s %s %s %d %d /APP/STUFF/USERS/SHOW/?id=%d /APP/STUFF/EDIT/INPUT/?id=%d /APP/STUFF/DELETE/CONFIRM/?id=%d",$1,$2,$3,$4,$5,$6,$7,$8,$9,$1,$1,$1)}'    > ${USERSD}/LV3/STUFF
chmod 775 ${USERSD}/LV3/STUFF

########################################
#SET SESSION
COOK=`${SYSD}/CGI/SESSION/SESSION_SET ${STUFF_SESS_ID} `
echo $COOK > $tmp-cook

########################################
#HTMLの設定
ACTION=`cat $tmp-action`
cat ${SYSD}/APPLI/${CATEGORY}/${FUNC}/HTML/${ACTION}.HTML   |
sed -e "s/###FAMILY_NAME_LABEL###/${VALUE1}/"   |
sed -e "s/###GIVEN_NAME_LABEL###/${VALUE2}/"    |
sed -e "s/###EMAIL_LABEL###/${VALUE3}/"         > $tmp-html

###############################################################################
#ending
echo "employee edit user OK"
#echo $COOK_SET
exit 0



